<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.VehicleListFragment"
    android:padding="@dimen/fragments_dafault_padding">
    <com.google.android.material.button.MaterialButton
        android:id="@+id/fetch_btn"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:minHeight="64dp"
        android:text="@string/fetch_btn_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/data_count_til"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/fetch_btn"
        app:layout_constraintBottom_toBottomOf="@id/fetch_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/fetch_btn"
        android:layout_marginEnd="@dimen/child_views_default_margin"
        android:hint="@string/data_size_hint"
        app:endIconMode="clear_text">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/data_count_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"/>
    </com.google.android.material.textfield.TextInputLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/vehicle_list_recycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/data_count_til"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="@dimen/child_views_default_margin"
        android:visibility="visible"/>

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/child_views_default_margin"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/data_count_til" />

</androidx.constraintlayout.widget.ConstraintLayout>